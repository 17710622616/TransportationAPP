<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youcoupon.john_li.transportationapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:name=".TMSUtils.TMSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TMSActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TMSActivity.LoginActivity" android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".TMSActivity.DataUpdateActivity"/>
        <activity android:name=".TMSActivity.TestPrintWebActivity"/>
        <activity android:name=".TMSActivity.MaterialRecyclingActivity"/>
        <activity android:name=".TMSActivity.DeliverGoodsActivity"/>
        <activity android:name=".TMSActivity.TodayInvoiceListActivity"/>
        <activity android:name=".TMSActivity.CloseAccountActivity"/>
    </application>

</manifest>