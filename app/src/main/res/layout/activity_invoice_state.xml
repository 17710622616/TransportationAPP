<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youcoupon.john_li.transportationapp.TMSView.TMSHeadView
        android:id="@+id/invoice_state_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_invoice_0_tv"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="收貨"
                android:textSize="20sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:background="@drawable/selector_btn_green_click"
                android:clickable="true"
                android:layout_margin="3dp"/>

        <RadioGroup
            android:id="@+id/invoice_state_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/invoice_state_40_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40-澳門可口可樂飲料有限公司"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:visibility="gone"/>
            <RadioButton
                android:id="@+id/invoice_state_71_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="71-貝達有限公司"
                android:buttonTint="@color/colorPrimary"
                android:visibility="gone"/>
            <RadioButton
                android:id="@+id/invoice_state_72_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="72-BLS-Circle K(Macau)"
                android:buttonTint="@color/colorPrimary"
                android:visibility="gone"/>
        </RadioGroup>

        <EditText
            android:id="@+id/invoice_state_invoice_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="請掃描發票"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:inputType="number"
            android:textCursorDrawable="@drawable/shape_edit_text"
            android:theme="@style/editTextUnderLine"/>

    <!--<GridView
        android:id="@+id/invoice_state_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:columnWidth="112dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_margin="4dp"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_invoice_1_tv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="客戶無落單"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_2_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="落錯品種/貨量"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_3_tv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="無錢比"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_invoice_4_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="無開門/店鋪休息"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_5_tv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="發票地址不詳"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_6_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="客戶要求搬上樓"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_invoice_7_tv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="執漏貨"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_8_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="道路管制"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/item_invoice_9_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="客戶已結業/搬遷"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_invoice_10_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="營業員提早通知取消"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_11_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="發票沒有附上PO/無入閘紙"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/item_invoice_12_tv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="其他"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_click"
                    android:clickable="true"
                    android:layout_margin="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>