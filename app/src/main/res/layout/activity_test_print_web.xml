<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youcoupon.john_li.transportationapp.TMSView.TMSHeadView
        android:id="@+id/test_print_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/test_print_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="left|center_vertical|center_horizontal|center"
                android:id="@+id/test_previous_page"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/previous_page"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_gravity="right|center_vertical|center_horizontal|center"
                android:id="@+id/test_next_page"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/next_page"
                android:scaleType="fitXY"/>
        </FrameLayout>
        <TextView
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/test_print_tv"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印"/>
    </LinearLayout>
</LinearLayout>