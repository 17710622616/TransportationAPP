<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWight">
    <TextView
        android:id="@+id/dialog_dg_material_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="物料"
        android:textColor="@color/color_black"
        android:textSize="22sp"
        android:padding="8dp"/>

    <RadioGroup
        android:id="@+id/dialog_dg_material_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="8dp">
        <RadioButton
            android:id="@+id/dialog_dg_send_out_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送出"
            android:textColor="@color/color_black"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/dialog_dg_recycle_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="回收"
            android:textColor="@color/color_black"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/dialog_dg_send_recycle_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="送出及回收"
            android:textColor="@color/color_black"
            android:textSize="12sp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="請輸入數量："
        android:textColor="@color/color_black"
        android:textSize="22sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/dialog_dg_num_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25sp"
        android:gravity="center"
        android:inputType="number"
        android:textCursorDrawable="@drawable/shape_edit_text"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_dg_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/color_black"
            android:textSize="22sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/dialog_dg_submit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="確定"
            android:textColor="@color/color_black"
            android:textSize="22sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>