<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/item_invoice_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/selector_item_car_split"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:checked="false"
        android:clickable="false"/>
    <TextView
        android:id="@+id/item_invoice_no"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="編號"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:gravity="center"
        android:lines="3"
        android:background="@drawable/shape_table_item"/>
    <TextView
        android:id="@+id/item_invoice_type"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="類型"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:gravity="center"
        android:lines="3"
        android:background="@drawable/shape_table_item"/>
    <TextView
        android:id="@+id/item_invoice_qty"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="數量"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:gravity="center"
        android:lines="3"
        android:background="@drawable/shape_table_item"/>
    <LinearLayout
        android:id="@+id/item_invoice_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_invoice_cname"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="客戶名稱"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="2dp"
            android:gravity="center"
            android:lines="3"
            android:background="@drawable/shape_table_item"/>
        <TextView
            android:id="@+id/item_invoice_caddress"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="客戶地址"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="2dp"
            android:gravity="center"
            android:lines="3"
            android:background="@drawable/shape_table_item"/>
        <TextView
            android:id="@+id/item_invoice_district"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="區域編號"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="2dp"
            android:gravity="center"
            android:lines="3"
            android:background="@drawable/shape_table_item"/>
    </LinearLayout>
</LinearLayout>